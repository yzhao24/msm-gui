<h1>
  List of all directors
</h1>

<hr>
<form action="/insert_director_record" method="post">

  <div>
  <label for="name_field">Name</label>
  <input id="name_field" type="text" name="the_name">
  </div>

  <div>
  <label for="dob_field">Dob</label>
  <input id="dob_field" type="date" name="the_dob">
  </div>

  <div>
  <label for="bio_field">Bio</label>
  <textarea id="bio_field" name="the_bio" rows="3"></textarea>
  </div>

  <div>
  <label for="image_field">Image</label>
  <input id="image_field" type="text" name="the_image">
  </div>

  <div>
  <button>Create director</button>
  </div>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
